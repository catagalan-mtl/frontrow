<h1>Concert</h1>

<p><%= @concert.artist.name %></p>
<% if current_user.attended?(@concert) %>
  <p>attended</p>
  <%= link_to attendance_path(@attendance), data: { turbo_method: :delete } do %>
    <h3>I didn't go</h3>
  <% end %>
<% else %>
  <p>not attended</p>
  <%= link_to concert_attendances_path(@concert), data: { turbo_method: :post } do %>
    <h3>I went</h3>
  <% end %>
<% end %>

<p> <%= @concert.venue %> </p>

<br>

<%= render "reviews/review_form", concert: @concert, review: @review %>

<br>

<p><strong>Reviews</strong></p>

<ul class="list-group">
  <% @concert.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> <%= review.rating %></li>
  <% end %>
</ul>

<br>

<div class= btn-back-concerts>
  <%= link_to "Back to all Concerts", concerts_path %>
</div>