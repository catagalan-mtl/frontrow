<% if Date.today <= @concert.date %>
  <%= render "upcoming_banner", concert: @concert %>
<% else %>
  <%= render "show_banner", concert: @concert %>
<% end %>

<div class="countdown-container">
  <div class="countdown">
    <% if Date.today <= @concert.date %>
      <% date = (@concert.date.strftime('%d/%m/%Y').to_date - Date.today).to_i.to_s.chars %>
        <% date.each do |number| %>
          <div class="day">
            <p><%= number %></p>
          </div>
        <% end %>
    <% end %>
  </div>
  <div>
    <h4>days left</h4>
  </div>
</div>

<div class="grid-container" >
  <ul class="list-group">
    <% @reviews.each do |review| %>
      <%= render "review_card", review: review %>
    <% end %>
  </ul>
</div>

<div class= btn-back-concerts>
  <%= link_to "Back to all Concerts", concerts_path %>
</div>
