<div class="shadowed-box review-card" >
  <%= link_to user_path(review.user) do %>
   <div class="review-card-user">
      <%= cl_image_tag review.user.avatar.key, class:"avatar"  %>
      <p><strong><%= review.user.username %></strong></p>
   </div>
  <% end %>
  <% unless review.photos.count == 0 %>
    <div class="review-card-media">
      <%= cl_image_tag review.photos.first.key, class:"square-image"  %>
    </div>
  <% end %>
  <div class="review-card-content">
    <p><%= review.content %></p>
  </div>

  <div class="review-card-interactions">
    <div>
      <%= image_tag "comment.svg", alt: "comment"%>
    </div>
    <div>
    <% if current_user.favorited?(review) %>
      <%= link_to unlike_review_path(review) do %>
        <%= image_tag "heart-fill.svg", data: { turbo_method: :delete } %>
      <% end %>
    <% else %>
      <%= link_to like_review_path(review) do %>
        <%= image_tag "heart-light", data: { turbo_method: :post } %>
      <% end %>
    <% end %>
    </div>
  </div>
</div>
