<button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasBottom" aria-controls="offcanvasBottom">Edit Profile</button>

<div class="offcanvas offcanvas-bottom" tabindex="-1" id="offcanvasBottom" aria-labelledby="offcanvasBottomLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasBottomLabel">Edit Profile</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body small">
  <%= simple_form_for(user) do |f| %>
    <div class="container mt-5 mb-5 d-flex justify-content-center">
      <div class="card px-0 py-6">
        <div class="card-body">
          <h3 class="mt-4">Your profile information:</h3>
          <div class="row">
            <div class="col-sm-12">
              <%= f.input :username, placeholder: "Username", label: false %>
              <%= f.input :email, placeholder: "E-mail", label: false %>
              <%= f.input :age, placeholder: "Age", label: false %>
              <%= f.input :city, placeholder: "City", label: false %>
              <%= f.input :bio, placeholder: "Bio", label: false %>
              <%= f.input :avatar, as: :file, input_html: { multiple: false }, label: "Upload your avatar" %>
              <%= f.input :banner, as: :file, input_html: { multiple: false }, label: "Upload your background image" %>
            </div>
          </div>
        </div>
        <div class=" d-flex flex-column justify-content-center">
          <%= f.submit 'Update my profile', class:'btn btn-flat btn-big'%>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
