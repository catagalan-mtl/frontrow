<div id="user-<%=user.id%>" style="">
  <% if current_user.following?(user) %>
    <%= button_to "Unfollow", {action: 'unfollow', id: user.id}, method: 'post',
      class: 'btn' %>
  <% elsif current_user != user %>
    <%= button_to "Follow", {action: 'follow', id: user.id}, method: 'post',
      class: 'btn' %>
  <% end %>
</div>
