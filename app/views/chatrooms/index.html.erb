<h1>chats</h1>

<div>
  <% if @messages.nil? %>
    <p>You don't have any messages</p>
  <% else %>
    <ul>
      <% @messages.each do |message| %>
        <%= link_to chatroom_path(message.chatroom) do %>
          <div class="chat-index-card shadowed-box">
            <%= message.chatroom.id %>
            <%= message.find_other_user(current_user).username %>
            <%= message.content %>
            <%= message.created_at %>
          </div>
        <% end %>
      <% end %>
    </ul>
  <% end %>
</div>
